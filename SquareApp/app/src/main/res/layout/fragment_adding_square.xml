<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddingSquare">


    <Button
        android:id="@+id/firstSquare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="212dp"
        android:backgroundTint="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/secondSquare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/secondSquare"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="148dp"
        android:backgroundTint="@color/purple_200"
        app:layout_constraintBottom_toTopOf="@+id/centerSquare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/thirdSquare"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="188dp"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fourthSquare"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/centerSquare" />

    <Button
        android:id="@+id/fourthSquare"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/centerSquare"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="292dp"
        android:backgroundTint="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstSquare" />
</androidx.constraintlayout.widget.ConstraintLayout>